{
  "name": "charm-ui",
  "version": "0.5.5",
  "description": "Simple UI Framework",
  "author": "Nursultan Berkimbay",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:ui && npm run clean:js && npm run build:esm && npm run build:commonjs",
    "clean:js": "rm -r dist/charm.*.js",
    "build:ui": "NODE_ENV=production webpack --config config/webpack-build.config.js",
    "build:esm": "BABEL_ENV=esm babel src --out-dir dist/esm --ignore '**/css','**/docs' --source-maps inline",
    "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir dist/commonjs --ignore '**/css','**/docs' --source-maps inline",
    "release": "np --no-publish"
  },
  "keywords": [
    "charm",
    "ui",
    "react"
  ],
  "engines": {
    "node": ">=8"
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "peerDependencies": {
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.1.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.1.5",
    "autoprefixer": "^9.3.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.20",
    "css-loader": "^1.0.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^4.0.0-beta.4",
    "mini-css-extract-plugin": "^0.4.5",
    "perfectionist": "^2.4.0",
    "postcss-custom-properties": "^8.0.9",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.0",
    "postcss-url": "^8.0.0",
    "prop-types": "^15.6.2",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4"
  },
  "browserslist": [
    "> 1%"
  ]
}
